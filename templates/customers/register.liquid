<div class="container">
  <div class="page-width">
    <div class="account-form">
      <h1 class="title row">{{ 'customer.register.title' | t }}</h1>

      {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        <div class="input-wrapper form-row">
          <label for="FirstName">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input type="text"
            name="customer[first_name]"
            id="FirstName"
            data-desktop-autofocus
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
        </div>

        <div class="input-wrapper form-row">
          <label for="LastName">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input type="text"
            name="customer[last_name]"
            id="LastName"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
        </div>

        <div class="input-wrapper form-row">
          <label for="Email">
            {{ 'customer.register.email' | t }}
          </label>
          <input type="email"
            name="customer[email]"
            id="Email"
            class="{% if form.errors contains 'email' %}input-error{% endif %}"
            value="{% if form.email %}{{ form.email }}{% endif %}"
            spellcheck="false"
            autocomplete="off"
            autocapitalize="off">
        </div>

        <div class="input-wrapper form-row">
          <label for="CreatePassword">
            {{ 'customer.register.password' | t }}
          </label>
          <input type="password"
            name="customer[password]"
            id="CreatePassword"
            class="{% if form.errors contains 'password' %}input-error{% endif %}">
        </div>

        <div class="large-row">
          <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn--fullwidth">
        </div>

        <div class="row">
          <a href="{{ routes.root_url }}">{{ 'customer.register.cancel' | t }}</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>
